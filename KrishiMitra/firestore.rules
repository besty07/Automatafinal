rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Deals: any logged-in user can read & create; update allowed too (dealer actions)
    match /deals/{dealId} {
      allow read, create, update: if request.auth != null;
    }

    // ── Reminders: each user can only access their own
    match /users/{userId}/reminders/{reminderId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ── Dealer history: each dealer can only access their own
    match /dealers/{dealerId}/history/{histId} {
      allow read, write: if request.auth != null && request.auth.uid == dealerId;
    }

    // ── Resources: public read, authenticated write (for client-side seeding)
    match /resources/{resourceId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
